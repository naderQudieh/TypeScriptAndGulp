{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "target": "es6",
    "module": "commonjs",
    "noImplicitAny": true,
    "strictNullChecks": false,
    "strictFunctionTypes": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "jsx": "react",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "rootDir": "./src",
    "checkJs": true,
    "maxNodeModuleJsDepth": 1,
    "sourceMap": false,
    "forceConsistentCasingInFileNames": true
  },

  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "./plugins/**/*",
    "./typings/**/*"
  ]
}
